        <Label TextColor="#022c22" Text="Adicionar produto" FontSize="24" HorizontalTextAlignment="Center" />

        <Label Text="Produto" TextColor="#022c22" FontAttributes="Bold" />
        <Entry x:Name="txt_descricao" Placeholder="Meia para centopeia" TextColor="#022c22" />

        <Label Text="Quantidade" TextColor="#022c22" FontAttributes="Bold" />
        <Entry x:Name="txt_quantidade" Placeholder="15" Keyboard="Numeric" TextColor="#022c22" />

        <Label Text="Valor UnitÃ¡rio:" TextColor="#022c22" FontAttributes="Bold" />
        <Entry x:Name="txt_preco" Placeholder="1" Keyboard="Numeric" TextColor="#022c22" />
    </VerticalStackLayout>
</ContentPage>